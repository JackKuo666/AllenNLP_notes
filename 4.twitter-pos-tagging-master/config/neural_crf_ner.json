{
  "dataset_reader": {
    "type": "conll2003",
    "tag_label": "ner",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "token_characters": {
        "type": "characters"
      }
    }
  },
  "train_data_path": "./data/twitter_train.ner",
  "validation_data_path": "./data/twitter_dev.ner",
  "test_data_path": "./data/twitter_dev.ner",
  "evaluate_on_test": true,
  "model": {
    "type": "neural_crf",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50
        },
        "token_characters": {
            "type": "character_encoding",
            "embedding": {
            "embedding_dim": 25
            },
            "encoder": {
            "type": "rnn",
            "input_size": 25,
            "hidden_size": 80,
            "num_layers": 2,
            "dropout": 0.25
            }
        }
      }
    },
    "encoder": {
      "type": "pass_through",
      "input_dim": 130
    },
    "regularizer": [
      [
        "transitions$",
        {
          "type": "l2",
          "alpha": 0.01
        }
      ]
    ]
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 50,
    "patience": 10,
    "cuda_device": -1
  }
}
